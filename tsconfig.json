{
  "compilerOptions": {
    "strict": true,
    "target": "ESNext",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "outDir": "./dist",   
    "rootDir": "./src",  
    "skipLibCheck": true 
  },
  "include": ["src/**/*"], 
  "exclude": ["node_modules"] 
}